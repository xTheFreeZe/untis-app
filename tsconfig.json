{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "allowJs": true, // allows import js files
    "strict": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // allows import json files
    "skipLibCheck": true,
    "module": "ESNext" // Ensures ESM support
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
